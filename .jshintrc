{
    "curly": true,
    "eqeqeq": true,
    "freeze": true,
    "immed": true,
    "maxlen": 120,
    "newcap": true,
    "noarg": true,
    "noempty": true,
    "nonbsp": true,
    "nonew": true,
    "quotmark": "single",
    "trailing": true,
    "undef": true,
    "unused": true,
    "node": true,

    "overrides": {
        "client/**/**.js": {
            "browser": true,
            "predef": ["modules"],
            "es3": true
        },

        "**.deps.js": {
            "expr": true
        },

        "**.test.js": {
            "mocha": true,
            "expr": true
        }
    }
}
